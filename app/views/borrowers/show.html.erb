<div class="col-md-3">
	<table class="table table-striped table-hover">
 		<tr>
 			<th>Name</th>
 			<td><%=@borrower.first_name%> <%=@borrower.last_name%></td>
 		</tr>
 		<tr>
 			<th>Amount Needed</th>
 			<td>$<%=@borrower.amount_needed%></td>
 		</tr>
 		<tr>
 			<th>Amount Received</th>
 			<td>$<%=@borrower.amount_received%></td>
 		</tr>
	</table>
</div>
<div class="col-md-10">
	<h3>List of people who lent you money</h3>
	<table class="table table-striped table-hover">
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Amount Lent ($)</th>
		</tr>
		<% @transactions.each do |t| %>
			<tr>
				<td><%=t.first_name%> <%=t.last_name%></td>
				<td><%=t.email%></td>
				<td>$<%=t.amount%></td>
			</tr>
		<% end %>
	</table>
</div>